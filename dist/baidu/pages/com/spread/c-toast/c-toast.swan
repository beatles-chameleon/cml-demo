<cml-buildin-page title="c-toast演示" class=" cml-base cml-page">
  <view class="container  cml-base cml-view">
    <c-header title="c-toast" class=" cml-view cml-c-header"></c-header>
    <c-toast duration="{{duration}}" show="{{show}}" bindshow="_cmlEventProxy" data-eventshow="{{['changeShow']}}" message="{{message}}" type="{{type}}" need-icon="{{needIcon}}" mask="{{mask}}" class=" cml-view cml-c-toast"></c-toast>
    <cml-buildin-button class="btn  cml-base cml-button" bindonclick="_cmlEventProxy" data-eventonclick="{{['showLoading']}}" text="loading toast"></cml-buildin-button>
    <cml-buildin-button class="btn  cml-base cml-button" bindonclick="_cmlEventProxy" data-eventonclick="{{['showMask']}}" text="loading toast with mask"></cml-buildin-button>
    <cml-buildin-button class="btn  cml-base cml-button" bindonclick="_cmlEventProxy" data-eventonclick="{{['showSuccess']}}" text="success toast"></cml-buildin-button>
    <cml-buildin-button class="btn  cml-base cml-button" bindonclick="_cmlEventProxy" data-eventonclick="{{['showWarn']}}" text="warn toast"></cml-buildin-button>
    <cml-buildin-button class="btn  cml-base cml-button" bindonclick="_cmlEventProxy" data-eventonclick="{{['showWithout']}}" text="toast without icon"></cml-buildin-button>
  </view>
</cml-buildin-page>